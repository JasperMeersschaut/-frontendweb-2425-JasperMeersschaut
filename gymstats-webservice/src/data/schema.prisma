generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement()) @db.UnsignedInt
  name          String
  lastName      String
  email         String   @unique(map: "idx_user_email_unique")
  sex           String
  birthdate     DateTime @db.DateTime(0)
  length        Int
  weight        Float
  password_hash String   @db.VarChar(255)
  roles         Json

  userWorkouts UserWorkout[]
  workouts     Workout[] @relation("UserWorkouts")
}

model Workout {
  id           Int           @id @default(autoincrement()) @db.UnsignedInt
  type         String
  duration     Int
  muscleFocus  String
  items        Exercise[]
  userWorkouts UserWorkout[]
  createdBy    Int?          @db.UnsignedInt
  user         User?         @relation("UserWorkouts", fields: [createdBy], references: [id])
}

model Exercise {
  id          Int       @id @default(autoincrement()) @db.UnsignedInt
  type        String
  muscleGroup String
  description String? 
  workouts    Workout[]
}

model UserWorkout {
  id        Int      @id @default(autoincrement()) @db.UnsignedInt
  user      User     @relation(fields: [id], references: [id])
  userId    Int      @db.UnsignedInt
  workout   Workout  @relation(fields: [workoutId], references: [id])
  workoutId Int      @db.UnsignedInt
  date      DateTime @default(now())
  notes     String?
}
